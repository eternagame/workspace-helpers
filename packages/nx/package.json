{
  "name": "@eternagame/nx",
  "description": "Opinionated Nx utilities",
  "author": "Jonathan Romano <jonathan@luxaritas.com>",
  "version": "1.2.0",
  "license": "BSD-3-Clause",
  "scripts": {
    "prepublishOnly": "shx cp ../../LICENSE . && nx build",
    "postpublish": "shx rm LICENSE",
    "prebuild": "shx rm -rf dist",
    "build": "tsc -p tsconfig.build.json && npx distify",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint src/"
  },
  "generators": "./generators.json",
  "executors": "./executors.json",
  "dependencies": {
    "@nrwl/devkit": "^13.8.1"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "packages/nx/dist"
        ]
      }
    }
  },
  "devDependencies": {
    "@eternagame/jest": "*",
    "@eternagame/distify": "*",
    "@nrwl/workspace": "^13.8.1"
  }
}
