{
  "$schema": "http://json-schema.org/schema",
  "$id": "PresetEterna",
  "cli": "nx",
  "title": "Initializes an Nx workspace for use as part of the Eterna project",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "Workspace description",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Provide a brief description for the workspace",
      "pattern": "^[\\w ]*$"
    },
    "license": {
      "type": "string",
      "description": "Repository license",
      "enum": ["BSD3", "EternaNoncommercial", "None"],
      "x-prompt": {
        "message": "Which license would you like to use?",
        "type": "list",
        "items": [
          { "value": "BSD3", "label": "BSD 3-Clause" },
          {
            "value": "EternaNoncommercial",
            "label": "Eterna Noncommercial License"
          },
          {
            "value": "None",
            "label": "Include no default license (you may add a LICENSE file and modify the package.json license field yourself)"
          }
        ]
      }
    }
  },
  "required": ["description"]
}
