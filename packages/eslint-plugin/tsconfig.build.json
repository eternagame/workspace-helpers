{
  "extends": "@eternagame/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    // ESLint doesn't support ES Modules
    "module": "commonjs",
    "preserveValueImports": false,
    "isolatedModules": false
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*.ts",
    "**/test/**/*.ts"
  ],
  "include": ["src/**/*.ts"]
}
