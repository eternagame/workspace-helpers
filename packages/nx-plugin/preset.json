{
  "$schema": "../../node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "implicitDependencies": {
    "package.json": "*",
    "package-lock.json": "*",
    ".github/workflows/ci.yml": "*",
    "nx.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "test:cov", "_e2e"]
      }
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/**/*.(spec|test|cy).(js|mjs|cjs|ts|mts|cts)",
      "!{projectRoot}/**/(__tests__|test|tests|spec)/**/*.(js|mjs|cjs|ts|mts|cts)",
      "!{projectRoot}/(jest|cypress).config.(js|mjs|cjs|ts|mts|cts)",
      { "runtime": "node -v" }
    ],
    "test": [
      "{projectRoot}/**/*.(spec|test).(js|mjs|cjs|ts|mts|cts)",
      "{projectRoot}/**/(__tests__|test|tests|spec)/**/*.(js|mjs|cjs|ts|mts|cts)",
      "{projectRoot}/jest.config.(js|mjs|cjs|ts|mts|cts)"
    ],
    "e2e": [
      "{projectRoot}/**/*.cy.(js|mjs|cjs|ts|mts|cts)",
      "{projectRoot}/cypress.config.(js|mjs|cjs|ts|mts|cts)"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["default", "^default"],
      "dependsOn": ["^build"],
      "outputs": ["./dist"]
    },
    "lint": {
      "inputs": ["default", "^default", "test", "{workspaceRoot}/.eslintrc.js"],
      "dependsOn": ["build"]
    },
    "test": {
      "inputs": ["default", "^default", "test"],
      "dependsOn": ["build"]
    },
    "test:cov": {
      "inputs": ["default", "^default", "test"],
      "dependsOn": ["build"],
      "outputs": ["./coverage"]
    },
    "_e2e": {
      "inputs": ["default", "^default", "e2e"],
      "outputs": ["./cypress-run"],
      "dependsOn": ["^start"]
    },
    "e2e:_dev": {
      "dependsOn": ["^_dev"]
    },
    "build:watch": {
      "dependsOn": ["^build:watch"],
      "outputs": ["./dist"]
    },
    "_dev": {
      "dependsOn": ["build:watch"]
    },
    "start": {
      "dependsOn": ["build"]
    }
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  }
}
