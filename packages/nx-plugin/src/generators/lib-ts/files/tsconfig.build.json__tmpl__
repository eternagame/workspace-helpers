{
  "extends": "@eternagame/tsconfig/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**/*.ts",
    "**/test/**/*.ts",
    "**/tests/**/*.ts",
    "**/spec/**/*.ts"
  ],
  "include": ["src/**/*.ts"]
}
