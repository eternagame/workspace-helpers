{
  "$schema": "http://json-schema.org/schema",
  "$id": "TSIso",
  "cli": "nx",
  "title": "Adds new isomorphic TypeScript package to an Nx project",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name of your npm package?",
      "pattern": "^[a-zA-Z].*$"
    },
    "env": {
      "type": "string",
      "description": "Runtime environment",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "enum": ["iso", "web", "node"],
      "x-prompt": {
        "message": "What runtime environment is this package intended for?",
        "type": "list",
        "items": [
          { "value": "iso", "label": "Isomorphic (any environment)" },
          { "value": "web", "label": "Web/Browser" },
          { "value": "node", "label": "NodeJS" }
        ]
      }
    },
    "description": {
      "type": "string",
      "description": "Package description",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "Provide a brief description for the package",
      "pattern": "^[\\w -_']*$"
    },
    "directory": {
      "type": "string",
      "description": "A directory under the packages directory to create the package in"
    }
  },
  "required": ["name", "env", "description"]
}
