{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "types": ["node"],
    "module": "commonjs",
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*.ts",
    "**/test/**/*.ts"
  ],
  "include": ["src/**/*.ts"]
}
